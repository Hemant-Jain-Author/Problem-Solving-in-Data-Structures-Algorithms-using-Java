{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
	"configurations": [
		{
			"type": "java",
			"name": "Launch Java Program",
			"request": "launch",
			"mainClass": ""
		},
		{
			"type": "java",
			"name": "Launch Current File",
			"request": "launch",
			"mainClass": "${file}",
			"classpath": [
				".",
				"${fileDirname}",
				"$cwd"
			]
		},
		{
			"type": "java",
			"name": "Attach",
			"request": "attach",
			"hostName": "localhost",
			"port": "<debug port of the debuggee>"
		},
		{
			"name": "JavaC",
			"type": "java",
			"request": "launch",
			"stopOnEntry": true,
			"jdkPath": "${env:JAVA_HOME}/bin",
			"cwd": "${fileDirname}",
			"startupClass": "${fileBasenameNoExtension}",
			"mainClass": "${fileBasenameNoExtension}",
			"classpath": [
				".",
				"${fileDirname}",
				"$cwd"
			]
		},
		{
			"name": "Java",
			"type": "java",
			"request": "launch",
			"stopOnEntry": true,
			"jdkPath": "${env:JAVA_HOME}/bin",
			"cwd": "${fileDirname}",
			"startupClass": "${fileBasenameNoExtension}",
			"mainClass": "${fileBasenameNoExtension}",
			"classpath": [
				".",
				"${fileDirname}"
			]
		},
		{
			"name": "Java Console App",
			"type": "java",
			"request": "launch",
			"stopOnEntry": true,
			"jdkPath": "${env:JAVA_HOME}/bin",
			"cwd": "${fileDirname}",
			"startupClass": "${fileBasenameNoExtension}",
			"mainClass": "${fileBasenameNoExtension}",
			"classpath": [
				".",
				"${fileDirname}"
			],
			"externalConsole": true
		},
		{
			"type": "java",
			"name": "Debug (Launch)",
			"jdkPath": "/usr/bin",
			"startupClass": "${fileBasenameNoExtension}",
			"request": "launch",
			"cwd": "${workspaceFolder}",
			"mainClass": "${fileBasenameNoExtension}",
			"stopOnEntry": false,
			"classpath": [
				".",
				"${fileDirname}"
			],
		}
	]
}